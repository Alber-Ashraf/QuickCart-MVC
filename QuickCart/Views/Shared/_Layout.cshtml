<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - QuickCart</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Site-wide Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuickCart.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.png" />

</head>

<body class="d-flex flex-column min-vh-80 bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-info" asp-area="" asp-controller="Home" asp-action="Index">QuickCart</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4 flex-grow-1">
        <main role="main" class="pb-3">
			<partial name="_Notification" />

            <!-- Splash Screen with Dot Loader -->
            <div id="preloader">
                <div class="dot-loader">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <p class="text-white fw-bold mt-4">Loading...</p>
            </div>

            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-2 bg-dark text-light border-top shadow-sm">
        <div class="container text-center">
            <em class="text-secondary fs-6">"At <span class="text-info">QuickCart</span>, every click brings you closer to your dreams."</em>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>