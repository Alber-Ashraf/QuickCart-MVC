@model List<Category>

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">📂 Category List</h3>
            <a asp-controller="Category" asp-action="Create" class="btn btn-light text-primary fw-bold shadow-sm">
                ➕ Create New Category
            </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Category Name</th>
                        <th>Displayed Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <!-- Button to Edit the category -->
                                <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm mb-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>

                                <!-- Button to Delete the category -->
                                <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm mb-2"
                                   onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
