@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i> Delete Category
                    </h4>
                </div>
                <div class="card-body bg-light rounded-bottom-4">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control bg-white" disabled />
                            <label asp-for="Name"><i class="bi bi-tag me-2"></i>Category Name</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="DisplayOrder" class="form-control bg-white" disabled />
                            <label asp-for="DisplayOrder"><i class="bi bi-list-ol me-2"></i>Display Order</label>
                        </div>

                        <div class="alert alert-warning text-center fw-bold">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            Are you sure you want to delete this category? This action cannot be undone.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-danger px-4 rounded-pill">
                                <i class="bi bi-trash3-fill me-1"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
