@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0 text-center">Delete Category</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Hidden Field for Id -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Display Category Name and Display Order -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                            <input asp-for="DisplayOrder" class="form-control" disabled />
                        </div>

                        <!-- Confirmation Message -->
                        <div class="alert alert-danger" role="alert">
                            <strong>Warning!</strong> Are you sure you want to delete this category? This action cannot be undone.
                        </div>

                        <div class="d-flex justify-content-between">
                            <!-- Back Button -->
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <!-- Delete Button -->
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
