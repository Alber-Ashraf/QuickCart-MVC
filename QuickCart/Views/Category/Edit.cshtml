@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i> Edit Category
                    </h4>
                </div>
                <div class="card-body bg-light rounded-bottom-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control" placeholder="Category Name" />
                            <label asp-for="Name"><i class="bi bi-tag me-2"></i>Category Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="DisplayOrder" class="form-control" placeholder="Display Order" />
                            <label asp-for="DisplayOrder"><i class="bi bi-list-ol me-2"></i>Display Order</label>
                            <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success px-4 rounded-pill">
                                <i class="bi bi-save2 me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
