@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 650px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center text-dark mb-4">Create Account</h2>
            <h5 class="text-center mb-4">Join us today!</h5>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Role Selection -->
                <div class="form-floating mb-4">
                    <select asp-for="Input.Role" asp-items="@Model.Input.Role_List" class="form-select">
                        <option disabled selected>Select a role</option>
                    </select>
                    <label asp-for="Input.Role">Role</label>
                </div>

                <!-- Register Button -->
                <button id="registerSubmit" type="submit" class="btn btn-dark w-100 mb-3">
                    <i class="bi bi-person-plus-fill me-1"></i> Register
                </button>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr class="my-4" />
                <div class="text-center">
                    <h6 class="mb-3">Or register using:</h6>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary w-100 mb-2" name="provider" value="@provider.Name">
                                <i class="bi bi-box-arrow-in-right me-1"></i> @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
