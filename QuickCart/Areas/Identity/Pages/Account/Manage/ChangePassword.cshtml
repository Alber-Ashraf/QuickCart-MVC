@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-light mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-12">
        <form id="change-password-form" method="post" class="text-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Old Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control bg-light text-dark" autocomplete="current-password" placeholder="Old Password" />
                <label asp-for="Input.OldPassword" class="text-dark"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <!-- New Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control bg-light text-dark" autocomplete="new-password" placeholder="New Password" />
                <label asp-for="Input.NewPassword" class="text-dark"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control bg-light text-dark" autocomplete="new-password" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword" class="text-dark"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <button type="submit" class="w-100 btn btn-warning text-dark fw-bold">
                <i class="bi bi-shield-lock-fill me-1"></i> Update Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
