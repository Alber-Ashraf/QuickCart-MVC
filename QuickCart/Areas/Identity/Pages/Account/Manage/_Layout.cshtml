@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="container py-5 text-light bg-dark">
    <h2 class="mb-4 fw-bold text-light">Manage Your Account</h2>

    <div class="row">
        <!-- Side Navigation -->
        <div class="col-lg-3 mb-4">
            <partial name="_ManageNav" />
        </div>

        <!-- Main Content -->
        <div class="col-lg-6">
            <div class="p-4 rounded-4 shadow" style="background-color: #1e1e1e;">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
