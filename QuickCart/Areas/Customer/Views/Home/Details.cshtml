@model ShoppingCart

@{
    ViewData["Title"] = "Product Details";
}
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg border-0 rounded-4 position-relative">
                    <!-- Back Button Inside Card Top Right -->
                    <div class="position-absolute top-0 end-0 mt-3 me-3">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3 py-1">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back
                        </a>
                    </div>
                    <div class="row g-0">
                        <!-- Image Section -->
                        <div class="col-md-5">
                            <img src="@Url.Content(Model.Product.ImageURL)" alt="@Model.Product.Title" class="img-fluid rounded-start-4 h-100 w-100" style="object-fit: cover;" />
                        </div>

                        <!-- Details Section -->
                        <div class="col-md-7">
                            <div class="card-body p-4 d-flex flex-column justify-content-between h-100">
                                <div>
                                    <h3 class="card-title fw-bold mb-2">@Model.Product.Title</h3>
                                    <p class="text-muted mb-2">by <strong>@Model.Product.Author</strong></p>

                                    <!-- Dynamic Pricing -->
                                    <div class="mb-3">
                                        <h6 class="fw-bold">Pricing Based on Quantity:</h6>
                                        <ul class="list-unstyled small mb-3">
                                            <li><i class="bi bi-check-circle-fill text-success me-1"></i> 1-50: <strong>@Model.Product.Price.ToString("c")</strong></li>
                                            <li><i class="bi bi-check-circle-fill text-success me-1"></i> 51-100: <strong>@Model.Product.Price50.ToString("c")</strong></li>
                                            <li><i class="bi bi-check-circle-fill text-success me-1"></i> 100+: <strong>@Model.Product.Price100.ToString("c")</strong></li>
                                        </ul>
                                    </div>

                                    <!-- Info Badges -->
                                    <div class="mb-3">
                                        <span class="badge bg-secondary rounded-pill me-2">
                                            Category: @Model.Product.Category?.Name
                                        </span>
                                        <span class="badge bg-dark-subtle text-dark fw-semibold rounded-pill">
                                            ISBN: @Model.Product.ISBN
                                        </span>
                                    </div>

                                    <!-- Description -->
                                    <p class="card-text mt-3">@Model.Product.Description</p>
                                </div>

                                <!-- Add to Cart Section -->
                                <div class="d-flex justify-content-center gap-3 mt-2">
                                    <input asp-for="Count" type="number" name="count" value="1" min="1" class="form-control form-control-sm rounded-pill w-auto" style="max-width: 80px;" />
                                    <button type="submit" class="btn btn-success rounded-pill px-4">
                                        <i class="bi bi-cart-plus me-1"></i> Add to Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

