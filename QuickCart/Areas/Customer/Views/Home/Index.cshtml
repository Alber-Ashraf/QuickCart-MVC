@model IEnumerable<Product>

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold display-6">📦 Explore Our Latest Products</h2>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-lg border-0 rounded-25 position-relative">

                    <!-- Badge New -->
                    <span class="position-absolute top-0 end-0 m-2 badge bg-danger px-3 py-2 rounded-pill shadow-sm">New</span>

                    @if (product.ProductImages != null && product.ProductImages.Count() > 0)
                    {
                        <img src="@Url.Content(product.ProductImages.FirstOrDefault().ImageUrl)" class="card-img-top rounded-top-2"  style="height: 220px; object-fit: cover;" />
                    }
                    else
					{
                        <img src="https://placehold.co/500x600/png" class="card-img-top rounded-top-2" style="height: 220px; object-fit: cover;"  />
					}
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-bold mb-1">@product.Title</h5>
                        <p class="text-muted small mb-2">by <span class="fw-semibold">@product.Author</span></p>

                        <!-- New Feature: Show Category -->
                        <p class="text-primary small mb-2">
                            <i class="bi bi-tag-fill me-1"></i>@product.Category?.Name
                        </p>

                        <div class="d-flex align-items-center gap-2 mb-3">
                            <span class="fw-bold text-decoration-line-through text-muted">
                                @product.ListPrice.ToString("c")
                            </span>
                            >>
                            <span class="fw-bold text-success fs-5">
                                @product.Price.ToString("c")
                            </span>
                        </div>

                        <a asp-action="Details"
                        asp-route-productId="@product.Id"
                        class="btn btn-dark w-100 mt-auto rounded-pill">
                            <i class="bi bi-eye-fill me-1"></i> View Product
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
