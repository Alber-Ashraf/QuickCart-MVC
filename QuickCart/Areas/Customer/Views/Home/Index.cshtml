@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center rounded-top-4">
                    <h2 class="mb-0">
                        <i class="bi bi-house-door-fill me-2"></i> Welcome to QuickCart Admin
                    </h2>
                </div>
                <div class="card-body bg-light text-center rounded-bottom-4 py-5">
                    <p class="lead mb-4">
                        Manage your categories and products easily from your admin dashboard.
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-4">
                            <i class="bi bi-folder-fill me-2"></i> Manage Categories
                        </a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-success btn-lg rounded-pill px-4">
                            <i class="bi bi-box-seam me-2"></i> Manage Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
