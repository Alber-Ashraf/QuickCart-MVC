@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4 py-4 d-flex justify-content-between align-items-center px-4">
            <h4 class="mb-0">
                <i class="bi bi-cart4 me-2"></i> Your Shopping Cart
            </h4>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-light fw-bold rounded-pill">
                <i class="bi bi-arrow-left-circle me-1"></i> Continue Shopping
            </a>
        </div>

        <div class="card-body bg-light rounded-bottom-4">
            @if (Model.ShoppingCartList.Any())
            {
                @foreach (var item in Model.ShoppingCartList)
                {
                    <div class="row border-bottom py-3 align-items-center">
                        <div class="col-3 col-md-2">
                            <img src="@(item.Product.ImageURL)"
                                 class="img-fluid rounded shadow-sm" alt="Product Image" />
                        </div>

                        <div class="col-9 col-md-4">
                            <h5 class="text-dark mb-1 fw-bold text-uppercase">@item.Product.Title</h5>
                            <p class="mb-2 text-muted"><small>@item.Product.Author</small></p>
                            <p class="text-muted small">@Html.Raw(item.Product.Description)</p>
                        </div>

                        <div class="col-12 col-md-6 mt-3 mt-md-0 text-center text-md-end">
                            <div class="d-flex justify-content-center justify-content-md-end align-items-center mb-2">
                                <a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-outline-secondary btn-sm rounded-circle me-1">
                                    <i class="bi bi-dash"></i>
                                </a>
                                <span class="fw-bold mx-2">@item.Count</span>
                                <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-outline-secondary btn-sm rounded-circle ms-1">
                                    <i class="bi bi-plus"></i>
                                </a>
                            </div>
                            <p class="fw-semibold mb-1">Unit Price: <span class="text-primary">@item.Price.ToString("C")</span></p>
                            <p class="fw-bold fs-6 mb-0">Subtotal: <span class="text-success">@((item.Price * item.Count).ToString("C"))</span></p>

                            <div class="mt-2">
                                <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-sm btn-danger rounded-pill shadow-sm">
                                    <i class="bi bi-trash3-fill me-1"></i> Remove
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center py-5 mt-3 rounded-4">
                    <i class="bi bi-cart-x fs-2 me-2"></i> Your cart is currently empty.
                </div>
            }
        </div>

        @if (Model.ShoppingCartList.Any())
        {
            <div class="card-footer bg-white border-top-0 rounded-bottom-4 py-4">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <ul class="list-group mb-4">
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="fw-semibold text-uppercase">Total (USD):</span>
                                <span class="fw-bold fs-5 text-success">@Model.OrderTotal.ToString("C")</span>
                            </li>
                        </ul>
                        <a asp-action="Summary" class="btn btn-primary w-100 fw-bold rounded-pill shadow-sm">
                            <i class="bi bi-credit-card-2-front me-2"></i> Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
