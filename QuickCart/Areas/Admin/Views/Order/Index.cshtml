@{
    ViewData["Title"] = "Order List";
}

@{
    var status = Context.Request.Query["status"].ToString();
    var inprocess = "text-primary";
    var pending = "text-primary";
    var completed = "text-primary";
    var approved = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "pending":
            pending = "active text-white bg-dark";
            break;
        case "inprocess":
            inprocess = "active text-white bg-dark";
            break;
        case "completed":
            completed = "active text-white bg-dark";
            break;
        case "approved":
            approved = "active text-white bg-dark";
            break;
        default:
            all  = "active text-white bg-dark";
            break;
        
    }
}

<div class="container mt-5">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-box-seam me-2"></i> Order List
            </h3>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <div class="d-flex justify-content-center pb-4">
                <span></span>
                <ul class="list-group list-group-horizontal-sm d-flex justify-content-center">
                    <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                    <li class="list-group-item fw-bold @inprocess"><i class="bi bi-arrow-repeat me-1"></i> In Process</li>
                    </a>
                    <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                    <li class="list-group-item fw-bold @pending"><i class="bi bi-hourglass-split me-1"></i> Pending</li>
                    </a>
                    <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                    <li class="list-group-item fw-bold @completed"><i class="bi bi-check-circle me-1"></i> Completed</li>
                    </a>
                    <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="approved">
                    <li class="list-group-item fw-bold @approved"><i class="bi bi-check2-square me-1"></i> Approved</li>
                    </a>
                    <a class="text-decoration-none" asp-controller="Order" asp-action="Index" asp-route-status="all">
                    <li class="list-group-item fw-bold @all"><i class="bi bi-list-ul me-1"></i> All</li>
                    </a>
                </ul>

            </div>

            <div class="table-responsive">
                <table id="tblData" class="table table-bordered table-hover table-striped align-middle text-center mb-0 table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="bi bi-hash text-white me-1"></i> ID</th>
                            <th><i class="bi bi-person text-white me-1"></i> Name</th>
                            <th><i class="bi bi-phone text-white me-1"></i> Phone</th>
                            <th><i class="bi bi-envelope text-white me-1"></i> Email</th>
                            <th><i class="bi bi-bar-chart text-white me-1"></i> Status</th>
                            <th><i class="bi bi-cash-coin text-white me-1"></i> Total</th>
                            <th><i class="bi bi-tools text-white me-1"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- DataTable will fill this -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}
