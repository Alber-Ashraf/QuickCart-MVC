@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i> Delete Product
                    </h4>
                </div>
                <div class="card-body bg-light rounded-bottom-4">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Title" class="form-control bg-white" disabled />
                                    <label asp-for="Title"><i class="bi bi-book me-2"></i>Title</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Author" class="form-control bg-white" disabled />
                                    <label asp-for="Author"><i class="bi bi-person me-2"></i>Author</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ISBN" class="form-control bg-white" disabled />
                                    <label asp-for="ISBN"><i class="bi bi-upc-scan me-2"></i>ISBN</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ListPrice" class="form-control bg-white" disabled />
                                    <label asp-for="ListPrice"><i class="bi bi-currency-dollar me-2"></i>List Price</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control bg-white" disabled />
                                    <label asp-for="Price">Price 1-50</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Price50" class="form-control bg-white" disabled />
                                    <label asp-for="Price50">Price 50+</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Price100" class="form-control bg-white" disabled />
                                    <label asp-for="Price100">Price 100+</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold mt-3">Description</label>
                                <textarea asp-for="Description" class="form-control bg-white" rows="3" disabled></textarea>
                            </div>
                        </div>

                        <div class="alert alert-warning text-center fw-bold mt-4">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            Are you sure you want to delete this product? This action cannot be undone.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-danger px-4 rounded-pill">
                                <i class="bi bi-trash3-fill me-1"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}