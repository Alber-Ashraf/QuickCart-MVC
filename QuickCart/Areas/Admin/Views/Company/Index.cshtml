@model List<Company>

@{
    ViewData["Title"] = "Company List";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-buildings-fill me-2"></i> Companies
            </h3>
            <a asp-controller="Company" asp-action="Upsert"
               class="btn btn-light text-primary fw-bold shadow-sm rounded-pill">
                <i class="bi bi-plus-circle me-1"></i> Create New Company
            </a>
        </div>

        <div class="card-body bg-light rounded-bottom-4">
            @if (Model.Any())
            {
                <table id="tblData" class="table table-bordered table-hover table-striped align-middle text-center mb-0"
                       style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="bi bi-building text-warning me-1"></i> Name</th>
                            <th><i class="bi bi-telephone text-success me-1"></i> Phone</th>
                            <th><i class="bi bi-gear text-info me-1"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Filled by DataTable -->
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center m-0 py-4">
                    <i class="bi bi-info-circle me-2"></i> No companies found. Click "Create New Company" to add one.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
